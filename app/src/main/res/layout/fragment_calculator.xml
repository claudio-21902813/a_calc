<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_visor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/screen"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>
            <Button
                android:id="@+id/buttonCe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/clear_delete"
                android:text="C"/>
            <Button
                android:id="@+id/buttonLess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/clear_delete"
                android:text="DEL"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/ops_buttons"
                android:text="x"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:backgroundTint="@color/ops_buttons"
                android:layout_gravity="center"
                android:text="/"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/numbers"
                android:text="4"/>

            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/numbers"
                android:text="5"/>

            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/numbers"
                android:text="6"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/ops_buttons"
                android:text="-"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/numbers"
                android:text="1"/>

            <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/numbers"
                android:text="2"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/numbers"
                android:text="3"/>
            <Button
                android:id="@+id/button_Adition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/ops_buttons"
                android:text="+"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_span="2"
                android:backgroundTint="@color/numbers"
                android:text="0"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/numbers"
                android:text="."/>
            <Button
                android:id="@+id/button_equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="55dip"
                android:height="55dip"
                android:layout_gravity="center"
                android:backgroundTint="@color/ops_buttons"
                android:text="="/>
        </TableRow>
    </TableLayout>

</LinearLayout>